/* components/input-number/index.wxss */
.i-input-number {
  color: #495060
}

.i-input-number view {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  font-size: 12px;
  border-radius: 50%;
  border: 1px solid #33b8bc;
  line-height: 1;
  color: #999999;
}

