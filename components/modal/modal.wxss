/* components/modal/modal.wxss */
.session-share-container {
  transition: all ease-in-out .2s;
  z-index: 150;
  opacity: 0;
  pointer-events: none;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding: 0 40rpx;
}

.session-share-container .shade {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(2, 13, 17, .5);
}

.session-share-container .share-dialogue {
  position: relative;
  display: block;
  margin: 100px auto auto;
  border: 2px solid #586ca3;
  background-color: rgba(18, 25, 57, .95);
  max-width: 800px;
  padding: 30px;
  -webkit-box-shadow: rgba(0, 0, 0, .5) 0 5px 50px;
  box-shadow: rgba(0, 0, 0, .5) 0 5px 50px;
  width: 100%;
}
.session-share-container .share-dialogue.center{
  margin: auto !important;
}
.session-share-container input {
  color: #fff;
  display: block;
  outline: none;
  font-size: 16px;
  font-family: 'Exo 2', sans-serif;
  letter-spacing: 1px;
  font-weight: 300;
  width: 100%;
  border: 1px solid rgba(37, 107, 134, .5);
  background-color: rgba(0, 0, 0, .5);
  width: calc(100% - 120px);
  padding: 12px;
}

.session-share-container.show {
  opacity: 1;
  pointer-events: all;
}

.session-share-container .copy-button{
    position: relative;
    z-index: 10;
    background-color: transparent;
    border: 1px solid #586ca3;
    position: absolute;
    right: 30px;
    top: 2px;
    padding: 12px 25px;
    margin: 30px 0;
    font-size: 14px;
}