.select-more__title {
    padding-left: 30rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 40px;
}

.select-price {
    font-size: 28rpx;
    color: #555;
    background: #fff;
    border-bottom: 1rpx solid #e9e9e9;
    padding: 20rpx 90rpx 45rpx 90rpx;
}

.select-price__header {
    margin-bottom: 0;
    height: 50rpx;
    position: relative;
}

.select-price__footer {
    margin-top: 20rpx;
    height: 40rpx;
    position: relative;
}

.select-price__footer .select-price__item::after {
    content: "";
    position: absolute;
    bottom: auto;
    top: 5rpx;
    left: 50%;
    margin-left: -2rpx;
    width: 1rpx;
    height: 20rpx;
    background: #e9e9e9;
}

.select-price__item {
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    font-size: 20rpx;
    line-height: 50rpx;
    color: #999;
    white-space: nowrap;
    transform: translateX(-50%);
}

.select-price__item.is-selected {
    color: #fd8238;
}

.select-price__item::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -2rpx;
    width: 4rpx;
    height: 4rpx;
    background: #e9e9e9;
}

.range {
    padding: 30rpx 0;
}

.range-slider {
    height: 8rpx;
    background: #e9e9e9;
    position: relative;
    -webkit-transform: translateZ(0);
}

.range-slider__selected {
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    background: #fd8238;
    right: 0;
    margin: 0 30rpx;
}

.range__max_handle,.range__min_handle {
    position: absolute;
    top: -13px;
    right: -14px;
    width: 28px;
    height: 28px;
    background: #fff;
    border-radius: 50%;
    z-index: 1;
    color: #f60;
    box-shadow: 0 0 3px rgba(0,0,0,0.3);
}

.range__max_handle:after,.range__min_handle:after {
    content: "";
    position: absolute;
    width: 28rpx;
    height: 28rpx;
    background: #fd8238;
    left: 50%;
    top: 50%;
    margin-left: -14rpx;
    margin-top: -14rpx;
    border-radius: 50%;
}