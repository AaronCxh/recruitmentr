.select-more__title {
    padding: 40rpx 0 0 62rpx;
    line-height: 58rpx;
    font-family: PingFangSC-Medium;
    font-size: 42rpx;
    color: #2B2F33;
}

.select-price {
    font-size: 28rpx;
    color: #555;
    padding: 60rpx 90rpx 45rpx 90rpx;
}

.select-price__header {
    margin-bottom: 0;
    height: 50rpx;
    position: relative;
}

.select-price__footer {
    margin-top: 20rpx;
    height: 40rpx;
    position: relative;
}

.select-price__footer .select-price__item::after {
    content: "";
    position: absolute;
    bottom: auto;
    top: 5rpx;
    left: 50%;
    margin-left: -2rpx;
    width: 1rpx;
    height: 20rpx;
    background: #e9e9e9;
}

.select-price__item {
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    font-size: 20rpx;
    /* line-height: 50rpx; */
    color: #767676;
    white-space: nowrap;
    transform: translateX(-50%);
}

.select-price__item.is-selected {
    color: #17BD88;
}

.select-price__item::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -2rpx;
    width: 4rpx;
    height: 4rpx;
    background: #e9e9e9;
}

.range {
    padding: 30rpx 0;
}

.range-slider {
    height: 8rpx;
    background: #e9e9e9;
    position: relative;
    -webkit-transform: translateZ(0);
}

.range-slider__selected {
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    background: #17BD88;
    right: 0;
    margin: 0 30rpx;
}

.range__max_handle,.range__min_handle {
    position: absolute;
    top: -13px;
    right: -14px;
    width: 28px;
    height: 28px;
    z-index: 1;
    background-image: url(https://staticnew.mayi.com/resourcesWap/wxxcx/images/slider_bar.png);
    background-size: 100% 100%;
}