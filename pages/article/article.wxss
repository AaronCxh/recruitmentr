page {
  background: #fff; }

.page {
  padding: 40rpx; }

.title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  font-weight: 500; }

.time {
  font-size: 24rpx;
  color: #999;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  position: relative; }
  .time:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 0;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }

.content {
  font-size: 28rpx;
  color: #999;
  line-height: 150%; }
