<view class="page">
  <view class='container'>
    <view class='top-section'>
      <view class='fl'>
        <view class="name">{{ data.Abbreviat }}</view>
        <view class="summary">
          <text>{{ data.StaffSize }}</text>
          <text class="dot">·</text>
          <text>{{ data.Industry }}</text>
        </view>
      </view>
      <view class='fr'>
        <image class='image' mode="aspectFit" src="{{ data.Logo }}"></image>
      </view>
    </view>
    <view class='content-section'>
      <van-tabs active="{{ active }}" bind:change="onChange" border="{{ false }}" line-width="15" color="#2351D3" custom-class="my-tabs" title-active-color="#333" title-inactive-color="#666">
        <van-tab title="公司介绍">
          <view class='intro-section'>
            <view class='welfare-wrapper'>
              <view class='row' wx:if="{{ data.WorkHours.length ||  data.RestTime.length ||  data.OverTime.length}}">
                <view class='cell'><icon custom-class="iconfont icon-shijian" color="#CCCCCC" size="16"></icon>{{ data.WorkHours }}</view>
                <view class='cell'><icon custom-class="iconfont icon-riqi" color="#CCCCCC" size="16"></icon>{{ data.RestTime }}</view>
                <view class='cell'><icon custom-class="iconfont icon-gouwudai" color="#CCCCCC" size="16"></icon>{{ data.OverTime }}</view>
                <view class='icon'>
                  <icon name='arrow ' color="#CCCCCC" size="16"></icon>
                </view>
              </view>
              <scroll-view style="width: 100%;" scroll-x="{{true}}" wx:if="{{ data.WelfareList.length }}">
                <view class='list'>
                  <view class='item' wx:for="{{ data.WelfareList }}">{{ item.Title }}</view>
                </view>
              </scroll-view>
            </view>
            <view class='address-wrapper'>
              <view class='hd'>
                <view class='fl'>公司地址</view>
                <!-- <view class='fr'>
                  <text>查看全部</text>
                  <icon name="arrow" color="#999999" size="14"></icon>
                </view> -->
              </view>
              <view class='bd'>
                <view class='fl'>{{ form.Address }} {{ form.WorkPlace }}</view>
                <view class='fr'>
                  <view class='btn' catch:tap="onMap">导航</view>
                </view>
              </view>
            </view>
            <view class='intro-wrapper'>
              <view class='hd'>
                <view class='title'>公司介绍</view>
              </view>
              <view class='hd'>
                <view class='summary'>
                  <wxParseComponent html="{{html}}" custom-class="my-wxParse"><view class="fl">查看更多</view></wxParseComponent>
                </view>
              </view>
            </view>
          </view>
        </van-tab>
        <van-tab title="在招职位（9947）">内容 2</van-tab>
      </van-tabs>
    </view>
  </view>
  <view class="album-wrapper" wx:if="{{ active == 0 }}">
    <view class="title">公司照片</view>
    <scroll-view style="width: 100%;" scroll-x="{{true}}">
      <view class="album-list">
        <image src="{{ item.Img }}" wx:for="{{data.AlbumList}}" class="album"></image>
      </view>
    </scroll-view>
  </view>
</view>