page {
  background: #fff; }

.page {
  padding-bottom: 140rpx; }

.list .item {
  padding: 40rpx;
  background: #fff;
  position: relative; }
  .list .item:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 40rpx;
    bottom: 0;
    left: 40rpx;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }
  .list .item .fl {
    font-size: 26rpx;
    font-weight: 500; }
  .list .item .fr {
    font-size: 22rpx;
    color: #999; }
  .list .item .info {
    font-size: 22rpx;
    color: #666;
    margin-top: 20rpx; }
    .list .item .info .dot {
      margin: 0 10rpx; }
