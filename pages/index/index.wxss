.van-sticky-wrap--fixed .edit-section {
  background: #0866FF !important; }
  .van-sticky-wrap--fixed .edit-section .type-tabs .item {
    color: #fff; }
    .van-sticky-wrap--fixed .edit-section .type-tabs .item.active {
