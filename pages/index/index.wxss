.edit-section {
  background: #fff;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  transition: all 0.3s;
  position: relative; }
  .edit-section:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 40rpx;
    bottom: 0;
    left: 40rpx;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }
  .edit-section .type-tabs {
    flex: 1;
    display: flex;
    align-items: center; }
    .edit-section .type-tabs .item {
      margin-right: 30rpx;
      font-size: 25rpx;
      font-weight: 500;
      color: #666; }
      .edit-section .type-tabs .item.active {
        font-size: 36rpx;
        color: #333; }
  .edit-section .btn {
    margin-left: auto;
    font-size: 0; }
    .edit-section .btn .iconfont {
      color: #444; }
    .edit-section .btn .icon {
      width: 34rpx;
      height: 34rpx; }

.swiper-section {
