page {
  background: #fff; }

.my-tabs .van-tabs__scroll {
  background: #529ad7; }

.my-tabs .van-tab {
  flex: 0 0 auto;
  padding: 0 20px;
  transition: all 0.3s; }
  .my-tabs .van-tab.van-tab--active {
    font-size: 18px; }

.chatroom-list {
  padding: 20rpx 0 0; }
  .chatroom-list .chatroom-item {
    display: flex;
    align-items: center;
    padding: 30rpx 40rpx;
    position: relative; }
    .chatroom-list .chatroom-item:after {
      position: absolute;
      box-sizing: border-box;
      transform-origin: center;
      content: ' ';
      pointer-events: none;
      top: auto;
      right: 40rpx;
      bottom: 0;
      left: 40rpx;
      border-bottom: 1px solid #EBEBEB;
      transform: scaleY(0.5); }
    .chatroom-list .chatroom-item .avatar-wrapper {
      position: relative;
      width: 100rpx;
      height: 100rpx;
      margin-right: 30rpx; }
    .chatroom-list .chatroom-item .image {
      width: 100%;
      height: 100%;
      border-radius: 50%; }
    .chatroom-list .chatroom-item .con {
      flex: 1; }
      .chatroom-list .chatroom-item .con .name {
        font-size: 30rpx;
        margin-right: 20rpx; }
      .chatroom-list .chatroom-item .con .content {
        position: relative;
        color: #999;
        font-size: 27rpx;
        margin-top: 20rpx;
        padding-right: 10px;
        box-sizing: border-box; }
        .chatroom-list .chatroom-item .con .content .label {
          position: absolute;
          width: 5px;
          height: 5px;
          border-radius: 50%;
          background: red;
          right: 0;
          top: 0; }

.msg-list .item {
  background: #fff;
  border-top: 15rpx solid #f8f8f8;
  padding: 0 40rpx; }
  .msg-list .item .date {
    padding: 35rpx 0;
    font-size: 25rpx;
    color: #999999; }
  .msg-list .item .content {
    font-size: 28rpx;
    color: #333;
    padding-bottom: 45rpx;
    position: relative; }
    .msg-list .item .content:after {
      position: absolute;
      box-sizing: border-box;
      transform-origin: center;
      content: ' ';
      pointer-events: none;
      top: auto;
      right: 0;
      bottom: 0;
      left: 0;
      border-bottom: 1px solid #EBEBEB;
      transform: scaleY(0.5); }
    .msg-list .item .content .image {
      width: 100%;
      height: 278rpx;
      display: block;
      margin-bottom: 30rpx; }
  .msg-list .item .button-group {
    text-align: right;
    padding: 30rpx 0; }
    .msg-list .item .button-group text {
      color: #529ad7;
      font-size: 25rpx; }
