<view class="page">
  <view class='container'>
    <view class='top-section__release'>
      <view class='title'>教育经历</view>
      <view class='summary'>详细的教育经历能为简历加分哦</view>
    </view>
    <form bindsubmit="onSubmit">
      <view class='form'>
        <view class='form-group'>
          <view class='label'>学校</view>
          <view class='form-group__input'>
            <input type="text" name="school" class='form-control' placeholder-class="placeholder" placeholder="请填写学校" />
          </view>
        </view>
        <view class='form-group'>
          <view class='label'>学历</view>
          <view class='form-group__input'>
            <input type="text" name="school" class='form-control' placeholder-class="placeholder" placeholder="请填写学校" />
          </view>
        </view>
        <view class='form-group'>
          <view class='label'>专业</view>
          <view class='form-group__input'>
            <input type="text" name="school" class='form-control' placeholder-class="placeholder" placeholder="请填写学校" />
          </view>
        </view>
        <view class='form-group'>
          <view class='label'>时间段</view>
          <view class='form-group__input'>
            <picker mode="multiSelector" range="{{timeRange}}" value="{{timeRangeValue}}" bindcolumnchange="onTimeRangeColChange" bindchange="onTimeRangeChange">
              <view wx:if="{{timeRangeValue.indexOf(-1) !== - 1}}" class='placeholder'>请填写时间段</view>
              <view wx:else class='placeholder'>{{ timeRange[0][timeRangeValue] }}-{{ timeRange[1][timeRangeValue] }}</view>
            </picker>
          </view>
        </view>
        <view class='form-group'>
          <view class='label'>选填</view>
          <view class='form-group__input'>
            <input type="text" name="school" class='form-control' placeholder-class="placeholder" placeholder="请填写学校" />
          </view>
        </view>
      </view>
    </form>
    <view class='fixed-bottom'>
      <view class='confirm-group'>
        <button class='button button-normal button-block'>
          下一步
        </button>
      </view>
    </view>
  </view>
</view>