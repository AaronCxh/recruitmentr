<view class="page">
  <view class='container'>
    <view class='top-section__release'>
      <view class='title mb0'>修改电话</view>
    </view>
    <view class='content'>
      <input class='form-control' value="{{ value }}" bindinput="onInput" placeholder="请输入手机号码" placeholder-class="placeholder" />
    </view>
  </view>
  <view class='fixed-bottom'>
    <view class='confirm-group'>
      <button class='button button-normal button-block' catch:tap="onSubmit">确定</button>
    </view>
  </view>
</view>