.hd {
  height: 44px;
  background: #fff;
  padding: 0 30rpx;
  position: relative; }
  .hd:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 30rpx;
    bottom: 0;
    left: 30rpx;
    border-bottom: 1px solid #ebebeb;
    transform: scaleY(0.5); }
  .hd .flex-box {
    height: 100%; }
  .hd .tabs {
    display: flex;
    align-items: center;
    margin: 0 -15rpx; }
    .hd .tabs .tab {
      font-size: 25rpx;
      color: #666;
      font-weight: 500;
      box-sizing: border-box;
      padding: 15rpx; }
      .hd .tabs .tab.active {
        color: #000; }
  .hd .filter-wrapper {
    display: flex; }
    .hd .filter-wrapper .filter-item {
      background: #f5f5f5;
      height: 46rpx;
      line-height: 46rpx;
      display: block;
      align-items: center;
      padding: 0 25rpx;
      margin-left: 14rpx;
      border-radius: 2px;
      max-width: 200rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap; }
      .hd .filter-wrapper .filter-item:after {
        content: '';
        display: inline-block;
        border-width: 7rpx;
        border-style: solid;
        border-color: transparent #c7c7c7 #c7c7c7 transparent;
        margin-left: 5rpx;
        margin-top: 10rpx; }

.seeker-list .item {
