.hd {
  height: 44px;
  background: #fff;
  padding: 0 30rpx;
  position: relative; }
  .hd:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 30rpx;
    bottom: 0;
    left: 30rpx;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }
  .hd .flex-box {
    height: 100%; }
  .hd .tabs {
    display: flex;
    align-items: center;
    margin: 0 -15rpx; }
    .hd .tabs .tab {
      font-size: 25rpx;
      color: #666;
      font-weight: 500;
      box-sizing: border-box;
      padding: 15rpx; }
      .hd .tabs .tab.active {
        color: #000; }
  .hd .filter-wrapper {
    display: flex; }
    .hd .filter-wrapper .filter-item {
      background: #f5f5f5;
      height: 46rpx;
      display: inline-flex;
      align-items: center;
      padding: 0 25rpx;
      margin-left: 14rpx;
      border-radius: 2px; }
      .hd .filter-wrapper .filter-item:after {
        content: "";
        display: inline-block;
        border-width: 7rpx;
        border-style: solid;
        border-color: transparent #C7C7C7 #C7C7C7 transparent;
        margin-left: 5rpx;
        margin-top: 10rpx; }

.seeker-list .item {
  background: #fff;
  padding: 35rpx 30rpx;
  border-bottom: 15rpx solid #EBEBEB; }
  .seeker-list .item .flex-box {
    margin-bottom: 30rpx; }
  .seeker-list .item .image-wrapper {
    width: 85rpx;
    height: 85rpx;
    position: relative; }
    .seeker-list .item .image-wrapper .avatar {
      border-radius: 50%;
      width: 100%;
      height: 100%; }
    .seeker-list .item .image-wrapper .sex-icon {
      position: absolute;
      top: 0;
      right: 0;
      width: 40rpx;
      height: 40rpx;
      border-radius: 50%; }
  .seeker-list .item .dot {
    margin: 0 5rpx; }
  .seeker-list .item .icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx; }
  .seeker-list .item .name {
    font-size: 33rpx;
    font-weight: 500;
    margin-bottom: 20rpx; }
  .seeker-list .item .base {
    font-size: 24prpx; }
  .seeker-list .item .work {
    font-size: 25rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center; }
  .seeker-list .item .summary {
    font-size: 25rpx;
    color: #666; }
