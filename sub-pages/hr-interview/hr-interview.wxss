page {
  background: #fff; }

.item {
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f8f8f8; }
  .item .item-header {
    padding: 30rpx 0;
    position: relative; }
    .item .item-header:after {
      position: absolute;
      box-sizing: border-box;
      transform-origin: center;
      content: ' ';
      pointer-events: none;
      top: auto;
      right: 0;
      bottom: 0;
      left: 0;
      border-bottom: 1px solid #EBEBEB;
      transform: scaleY(0.5); }
    .item .item-header .fl {
      font-size: 24rpx;
      color: #999; }
    .item .item-header .fr {
      font-size: 24rpx;
      color: #000; }
  .item .item-body {
    position: relative;
    padding: 40rpx 0; }
    .item .item-body:after {
      position: absolute;
      box-sizing: border-box;
      transform-origin: center;
      content: ' ';
      pointer-events: none;
      top: auto;
      right: 0;
      bottom: 0;
      left: 0;
      border-bottom: 1px solid #EBEBEB;
      transform: scaleY(0.5); }
    .item .item-body .image-wrapper {
      position: relative;
      margin-right: 30rpx; }
    .item .item-body .sex {
      position: absolute;
      right: 0;
      top: 0;
      width: 24rpx;
      height: 24rpx; }
    .item .item-body .avatar {
      width: 85rpx;
      height: 85rpx;
      border-radius: 50%; }
    .item .item-body .name {
      font-size: 33rpx;
      font-weight: 500;
      margin-bottom: 20rpx;
      line-height: 1; }
    .item .item-body .summary {
      font-size: 27rpx;
      line-height: 1; }
  .item .item-footer {
    padding: 30rpx 0; }
    .item .item-footer .date {
      font-size: 24rpx;
      color: #999;
      line-height: 1; }
