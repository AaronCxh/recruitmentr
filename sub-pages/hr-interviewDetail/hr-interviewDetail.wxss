page {
  background: #fff; }

.page {
  padding-bottom: 170rpx; }
  .page.safeArea {
    padding-bottom: calc(170rpx + 30px); }
    .page.safeArea .button-group {
      padding-bottom: 30px; }

.top-section {
  padding: 50rpx 0;
  position: relative; }
  .top-section:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 0;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }
  .top-section .con {
    flex: 1; }
  .top-section .image-wrapper {
    position: relative; }
    .top-section .image-wrapper .avatar {
      width: 100rpx;
      height: 100rpx;
      border-radius: 50%; }
    .top-section .image-wrapper .sex {
      position: absolute;
      top: 0;
      right: 0;
      width: 25rpx;
      height: 25rpx; }
  .top-section .con .name {
    font-size: 42rpx;
    font-weight: 500;
    margin-bottom: 30rpx;
    line-height: 1; }
  .top-section .con .summary {
    font-size: 25rpx;
    line-height: 1; }

.nav-section {
  position: relative;
  padding: 30rpx 0;
  margin-bottom: 30rpx; }
  .nav-section:after {
    position: absolute;
    box-sizing: border-box;
    transform-origin: center;
    content: ' ';
    pointer-events: none;
    top: auto;
    right: 0;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #EBEBEB;
    transform: scaleY(0.5); }
  .nav-section .icon {
    width: 52rpx;
    height: 52rpx;
    display: block;
    margin: 0 auto 20rpx; }
  .nav-section .text {
    font-size: 22rpx;
    text-align: center; }

.my-cell {
  padding: 30rpx 0 !important; }
  .my-cell .iconfont {
    margin-right: 30rpx; }

.button-group {
  background: #fff;
  display: flex;
  align-items: center;
  height: 150rpx;
  border-top: 1px solid #EBEBEB;
  padding: 0 40rpx; }
  .button-group .button-cancel {
    flex: 0 0 200rpx;
    margin-right: 20rpx;
    background: #C7C7C7;
    border-color: #C7C7C7;
    color: #fff; }
  .button-group .button-normal {
    flex: 1; }

.model-popup .header {
  font-size: 34rpx;
  height: 50px;
  font-weight: 500;
  padding: 0 40rpx;
  line-height: 50px; }

.model-popup .body {
  padding: 20rpx 40rpx 40rpx;
  box-sizing: border-box; }
  .model-popup .body > .title {
    margin-bottom: 30rpx;
    font-weight: 500;
    font-size: 25rpx; }

.model-popup .wrapper .title {
  font-size: 25rpx;
  font-weight: 500;
  margin-bottom: 36rpx; }

.model-popup .wrapper .textarea-control {
  height: 175rpx;
  font-size: 25rpx;
  background: #F5F5F5;
  border-radius: 4px;
  width: 100%;
  padding: 10px;
  box-sizing: border-box; }

.model-popup .button {
  margin-top: 30rpx; }
